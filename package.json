{
  "name": "cowboy-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "nodemon",
    "build": "yarn prisma:migrate && yarn prisma:generate && tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "submodule": "git submodule init && git submodule update",
    "minecraft": "cd minecraft-server && java -Xms4G -Xmx4G -jar paper-1.21.4-136.jar --nogui",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:sync": "cd src/cowboy-database && git pull origin minecraft && git add . && git commit -m 'sync' && git push origin HEAD:minecraft",
    "prisma:pull": "cd src/cowboy-database && git pull origin minecraft",
    "database:push": "yarn prisma:migrate && yarn prisma:generate && yarn prisma:sync",
    "database:pull": "yarn prisma:pull && yarn prisma:generate"
  },
  "prisma": {
    "schema": "src/cowboy-database/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/extension-pulse": "^1.2.0",
    "@types/body-parser": "^1.19.5",
    "@types/js-yaml": "^4.0.9",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "js-yaml": "^4.1.0",
    "socket.io": "^4.8.1",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@prisma/client": "^6.3.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.12.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.3.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "_moduleAliases": {
    "@": "./"
  }
}
